<%- include('../partials/header') %>

<div class="container">
  <div class="form-container">
    <h1>Edit Prompt</h1>
    <form action="/prompts/<%= prompt._id %>?_method=PUT" method="POST" class="prompt-form">
      <div class="form-group">
        <label for="from">From:</label>
        <input 
          type="text" 
          id="from" 
          name="from" 
          value="<%= prompt.from %>" 
          placeholder="Enter sender name" 
          required
          maxlength="100"
        >
      </div>

      <div class="form-group">
        <label for="to">To:</label>
        <input 
          type="text" 
          id="to" 
          name="to" 
          value="<%= prompt.to %>" 
          placeholder="Enter receiver name" 
          required
          maxlength="100"
        >
      </div>

      <div class="form-group">
        <label for="message">Message:</label>
        <textarea 
          id="message" 
          name="message" 
          rows="5" 
          placeholder="Enter your message" 
          required
          maxlength="500"
        ><%= prompt.message %></textarea>
        <small class="form-hint">Maximum 500 characters</small>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Update Prompt</button>
        <a href="/prompts" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
